{   "name" : "stripes_346_FourPlay42",
    "enabled" : true,
    "priority" : 6,
    "opacity" : 25,         // 0 = totaly transparent (invisible if blended), 100 = completely opaque
    "patternClassName" : "RgbVerticalPattern",
    "inputs" : [
        {   "inputName" : "rPosition",
            "widgetName" : "fourPlay42",
            "channelNumber" : 0,
            "measurement" : "position"
        },
        {   "inputName" : "gPosition",
            "widgetName" : "fourPlay42",
            "channelNumber" : 1,
            "measurement" : "position"
        },
        {   "inputName" : "bPosition",
            "widgetName" : "fourPlay42",
            "channelNumber" : 2,
            "measurement" : "position"
        },
        {   "inputName" : "width",
            "widgetName" : "fourPlay42",
            "channelNumber" : 3,
            "measurement" : "position"
        }
    ],
    "horizontalVPixelRatio" : 4,
    "rMaxSidebandWidth" : 32,           // sideband widths are in the context of virtual pixels
    "gMaxSidebandWidth" : 24,
    "bMaxSidebandWidth" : 16,
