{   "name" : "stripes_Flower1_Flower2",
    "enabled" : true,
    "priority" : 8,
    "opacity" : 50,                     // 0 = totaly transparent (invisible if blended), 100 = completely opaque
    "patternClassName" : "StripePattern",
    "inputs" : [
        {   "inputName" : "position",
            "widgetName" : "flower1",
            "channelNumber" : 0,
            "measurement" : "position"
        },
        {   "inputName" : "hueOffset",
            "widgetName" : "flower2",
            "channelNumber" : 0,
            "measurement" : "position"
        }
        //{   "inputName" : "width",
        //    "widgetName" : "flowerX",
        //    "channelNumber" : 0,
        //    "measurement" : "position"
        //}
    ],
    "isHorizontal" : false,
    "defaultHsv" : "pink",             // can use a recognized color name or h,s,v to specify custom hue, sat, and/or value
    "virtualPixelRatio" : 75,           // 48 * 75 = 3600; flower rotation measurements are [0, 3600)
    "numStripes" : 12,                   // number of stripes is in the context of physical pixels
    "scaledownFactor" : 1,              // effectively gear down a rotating widget
    "widthResetTimeoutSeconds" : 10,    // reset width to normal after this period of inactivity of the width channel
    "widthScaledownFactor" : 1,
    "maxSidebandWidth" : 100,           // sideband widths are in the context of virtual pixels
    "minSidebandWidth" : 100            // min should be equal to or greater than virtualPixelRatio

}

