{   "name" : "stripes_Flower1_Flower2",
    "enabled" : true,
    "priority" : 3,
    "opacity" : 100,                     // 0 = totaly transparent (invisible if blended), 100 = completely opaque
    "patternClassName" : "StripePattern",
    "inputs" : [
        {   "inputName" : "position",
            "widgetName" : "flower1",
            "channelNumber" : 0,
            "measurement" : "position"
        },
        //{   "inputName" : "width",
        //    "widgetName" : "flower2",
        //    "channelNumber" : 0,
        //    "measurement" : "position"
        //},
        {   "inputName" : "hue",
            "widgetName" : "flower2",
            "channelNumber" : 0,
            "measurement" : "position"
        }
        //{   "inputName" : "saturation",
        //    "widgetName" : "flower2",
        //    "channelNumber" : 0,
        //    "measurement" : "position"
        //}
    ],

    "positionMeasurementMapper" : [
        {   "rawMin" : 0,
            "rawMax" : 3599,
            "mappedStart" : 0,
            "mappedEnd" : 3599 
        }
    ],
    "widthMeasurementMapper" : [
        {   "rawMin" : 0,
            "rawMax" : 1799,
            "mappedStart" : 150,
            "mappedEnd" : 450
        },
        {   "rawMin" : 1800,
            "rawMax" : 3599,
            "mappedStart" : 450,
            "mappedEnd" : 150
        }
    ],
    "hueMeasurementMapper" : [
        {   "rawMin" : 0,
            "rawMax" : 3599,
            "mappedStart" : 0.0,
            "mappedEnd" : 255.0
        }
    ],
    "saturationMeasurementMapper" : [
        {   "rawMin" : 0,
            "rawMax" : 3599,
            "mappedStart" : 0.9,
            "mappedEnd" : 255.0
        }
    ],

    "isHorizontal" : false,
    "virtualPixelRatio" : 75,           // 75 * 48 strings = 3600; flower rotation measurements are [0, 3600)
    "numStripes" : 4,
    "minSidebandWidth" : 150,           // min should be equal to or greater than virtualPixelRatio
    "maxSidebandWidth" : 150,           // sideband widths are in the context of virtual pixels

    "startingHue" : 0,
    "endingHue" : 255,
    "hueDirectionIsBlueToRed" : false,
    "hueFoldbackPct" : 0,
    "hueRepeat" : 1,

    "startingSaturation" : 255.0,
    "endingSaturation" : 255.0,
    "saturationFoldbackPct" : 0.0,
    "saturationRepeat" : 1,

    "widthResetTimeoutSeconds" : 10,    // reset width to normal after this period of inactivity of the width channel

    // deprecated
    "defaultHsv" : "pink",              // can use a recognized color name or h,s,v to specify custom hue, sat, and/or value
    "scaledownFactor" : 1,              // effectively gear down a rotating widget
    "widthScaledownFactor" : 1

}

