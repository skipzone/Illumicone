{   "name" : "stripes_FourPlay42",
    "enabled" : true,
    "priority" : 6,
    "opacity" : 25,         // 0 = totaly transparent (invisible if blended), 100 = completely opaque
    "patternClassName" : "RgbVerticalPattern",
    "inputs" : [
        {   "inputName" : "redPosition",
            "widgetName" : "fourPlay42",
            "channelNumber" : 0,
            "measurement" : "position"
        },
        {   "inputName" : "greenPosition",
            "widgetName" : "fourPlay42",
            "channelNumber" : 1,
            "measurement" : "position"
        },
        {   "inputName" : "bluePosition",
            "widgetName" : "fourPlay42",
            "channelNumber" : 2,
            "measurement" : "position"
        },
        {   "inputName" : "width",
            "widgetName" : "fourPlay42",
            "channelNumber" : 3,
            "measurement" : "position"
        }
    ],
    "horizontalVpixelRatio" : 1,
    "verticalVpixelRatio" : 1,          // should always be 1 for straight, vertical stripes
    "maxSidebandWidth" : 2,
    "minSidebandWidth" : 1,             // should be equal to or greater than horizontalVpixelRatio
    "widthResetTimeoutSeconds" : 10,    // reset width to normal after this period of inactivity of the width channel
    "rScaledownFactor" : 1,             // effectively gear down a rotating widget
    "gScaledownFactor" : 1,
    "bScaledownFactor" : 1,
    "widthScaledownFactor" : 3
}

